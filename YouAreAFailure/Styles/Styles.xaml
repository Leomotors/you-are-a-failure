<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Layout  -->

    <Style x:Key="PageLayout" TargetType="StackPanel">
        <Setter Property="Padding" Value="30,0,30,50" />
    </Style>

    <!--  Text  -->

    <Style x:Key="PageHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Header2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="0,20,0,10" />
    </Style>

    <Style x:Key="TextLarge" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="Medium" />
    </Style>

    <Style x:Key="TextXL" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="Medium" />
    </Style>

    <!--  Paragraph  -->

    <Style
        x:Key="ParagraphLarge"
        BasedOn="{StaticResource TextLarge}"
        TargetType="TextBlock">
        <Setter Property="Margin" Value="0,20" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

</ResourceDictionary>
