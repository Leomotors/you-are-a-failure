<Page
    x:Class="you_are_a_failure.Failure.TortureChamber"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:you_are_a_failure.Failure"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        x:Name="MainStackPanel"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Style="{StaticResource PageLayout}">

        <TextBlock
            Margin="0,20,0,20"
            HorizontalAlignment="Center"
            FontSize="48">
            <TextBlock.Inlines>
                <Run FontWeight="SemiBold">You are a</Run>
                <Run
                    x:Name="ItalicBoldBoi"
                    FontStyle="Italic"
                    FontWeight="Bold" />
            </TextBlock.Inlines>
        </TextBlock>

        <MediaPlayerElement
            x:Name="FailurePlayer"
            MaxWidth="1200"
            AutoPlay="True" />

        <TextBlock
            x:Name="FooterTextBlock"
            Padding="0,20,0,20"
            Style="{StaticResource TextXL}"
            TextAlignment="Center" />

    </StackPanel>
</Page>
