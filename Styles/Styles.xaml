<ResourceDictionary
    x:Class="you_are_a_failure.Styles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Global Styles  -->

    <Style x:Key="Page" TargetType="StackPanel">
        <Setter Property="Padding" Value="30,0,30,0" />
    </Style>

    <Style x:Key="PageHeader" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Header2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="0,20,0,10" />
    </Style>

    <Style x:Key="TextLarge" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="Medium" />
    </Style>

    <Style x:Key="TextXL" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="Medium" />
    </Style>

</ResourceDictionary>